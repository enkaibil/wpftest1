<UserControl xmlns:MenuItem="clr-namespace:NSS.HanbaiKanri.Common.Controls.MenuItem"
             x:Name="userControl"
             x:Class="NSS.HanbaiKanri.Common.Controls.MenuPanel.HamburgerMenuPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NSS.HanbaiKanri.Common.Controls.MenuPanel"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="30">
    <ListBox ItemsSource="{Binding ItemsSource, ElementName=userControl}">
        <ListBox.Template>
            <ControlTemplate TargetType="ListBox">
                <DockPanel x:Name="bbb" Width="30">
                    <Grid DockPanel.Dock="Top">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="20" />
                            <RowDefinition Height="30" />
                            <RowDefinition />
                        </Grid.RowDefinitions>
                        <CheckBox x:Name="chkBox" Grid.Row="0" Visibility="Hidden" />
                        <Button x:Name="aaa" Grid.Row="1" Content="&#x2630;" />
                        <StackPanel Grid.Row="2">
                            <ItemsPresenter />
                        </StackPanel>
                    </Grid>

                    <Popup PlacementTarget="{Binding ElementName=chkBox}" Placement="Bottom" IsOpen="False" Width="200">
                        <StackPanel Background="#FF9CEE63">
                            <MenuItem:HamburgerMenuItem Alias="&#x2630;" Caption="メニュー" />
                        </StackPanel>

                    </Popup>
                </DockPanel>
            </ControlTemplate>
        </ListBox.Template>
        <ListBox.ItemsPanel>
            <ItemsPanelTemplate>
                <StackPanel />
            </ItemsPanelTemplate>
        </ListBox.ItemsPanel>

        <!--<ListView FontFamily="Segoe UI Symbol" FontSize="14">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="&#x2630;" Width="40" />
                    <GridViewColumn Header="メニュー" Width="150" />
                </GridView>
            </ListView.View>
            --><!--<ListView.Template>
                <ControlTemplate>
                    
                </ControlTemplate>
            </ListView.Template>
            <ItemsPanelTemplate>

            </ItemsPanelTemplate>--><!--
        </ListView>-->
    </ListBox>
</UserControl>
